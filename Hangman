import random

# Words and their hints
words_with_hints = {
    "python": "A popular programming language ğŸ",
    "guitar": "A stringed musical instrument ğŸ¸",
    "elephant": "The largest land animal ğŸ˜",
    "computer": "An electronic device for processing data ğŸ’»",
    "pizza": "A famous Italian dish ğŸ•"
}

# Hangman stages (visual progress)
hangman_stages = [
    """
       ------
       |    |
       |    
       |   
       |    
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |   
       |    
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |    |
       |    
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |   /|
       |    
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |   /|\\
       |    
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |   /|\\
       |   / 
       |   
    --------
    """,
    """
       ------
       |    |
       |    O
       |   /|\\
       |   / \\
       |   
    --------
    """
]

# Choose random word
word, hint = random.choice(list(words_with_hints.items()))
guessed = ["_"] * len(word)
attempts = 6
used_letters = set()

print("ğŸ® Welcome to Hangman!")
print("Hint:", hint)

while attempts > 0 and "_" in guessed:
    print(hangman_stages[6 - attempts])
    print("Word:", " ".join(guessed))
    print("Used letters:", " ".join(sorted(used_letters)))
    guess = input("Guess a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("âš  Please enter a single alphabet letter.\n")
        continue

    if guess in used_letters:
        print("âš  You already guessed that letter.\n")
        continue

    used_letters.add(guess)

    if guess in word:
        for i, letter in enumerate(word):
            if letter == guess:
                guessed[i] = guess
        print("âœ… Good guess!\n")
    else:
        attempts -= 1
        print("âŒ Wrong guess! Attempts left:", attempts, "\n")

# Game result
if "_" not in guessed:
    print("ğŸ‰ Congratulations! You guessed the word:", word)
else:
    print(hangman_stages[-1])
    print("ğŸ’€ Game Over! The word was:", word)
