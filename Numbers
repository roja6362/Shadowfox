1)def format_number(value, fmt):
    # use the built-in format function
    formatted = format(value, fmt)
    return formatted

# call the function with 145 and 'o'
result = format_number(145, 'o')
print("Formatted result:", result)

# identify the representation
print("The representation used is octal.")

2)def pond_water(radius):
    pi = 3.14
    # Step 1: Calculate area of the circular pond
    area = pi * (radius ** 2)
    
    # Step 2: Calculate water volume (1.4 liters per square meter)
    water = area * 1.4
    
    # Step 3: Print results (no decimals for water)
    print("Pond Area:", area)
    print("Total Water in Pond:", int(water), "liters")

# Call the function with radius = 84 meters
pond_water(84)

3)def calculate_speed(distance, time_minutes):
    # convert minutes to seconds
    time_seconds = time_minutes * 60
    
    # speed formula: Distance / Time
    speed = distance / time_seconds
    
    # print without decimal (integer)
    print("Speed:", int(speed), "m/s")

# call the function with given values
calculate_speed(490, 7)
