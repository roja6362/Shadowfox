1)def format_number(value, fmt):
    # use the built-in format function
    formatted = format(value, fmt)
    return formatted

# call the function with 145 and 'o'
result = format_number(145, 'o')
print("Formatted result:", result)

# identify the representation
print("The representation used is octal.")

2)#In a village, there is a circular pond with a radius of 84 meters
radius = 84 #in meters
pi = 3.14
water_per_sqm = 1.4 #liters per square meter

#calculate area of the pond
area = pi*radius**2

#calculate total water (inliters)
total_water = area * water_per_sqm

#print result without decimals
print("Total water in the pond (liters):",int(total_water))

3)#If you cross a 490meterlong street in 7 minutes
distance = 490 #in meters
time_minutes = 7
time_seconds = time_minutes * 60 #convert to seconds

#calculate speed in meters/second
speed = distance / time_seconds

#print speed without decimal point
print("speed (m/s):",int(speed))
